<?xml version="1.0" encoding="UTF-8" ?>
<configuration>
	<logger name="eu.codearte" level="ALL"/>
	<root level="INFO">
		<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
			<encoder>
				<pattern>%d{HH:mm:ss.SSS} | %-5level | %thread | %logger{1} | %m%n%rEx</pattern>
			</encoder>
		</appender>
	</root>
</configuration>
